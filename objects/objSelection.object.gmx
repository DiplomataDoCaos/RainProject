            <kind>1</kind>
            <string>/// Get input and select dificult

var arrowLeftPressed = keyboard_check_pressed(vk_left);
var arrowRightPressed = keyboard_check_pressed(vk_right);
var enterPressed = keyboard_check_pressed(vk_enter);//ord('Z') was before
var escPressed = keyboard_check_pressed(vk_escape);
idiot = false;

if(escPressed) game_end();

//Selector control

if (arrowRightPressed) and (arrowLeftPressed) //For funny people
{
    idiot = true
}
else if(arrowRightPressed)
{
    selection = selection + 1
    if selection &gt; selectMax then selection = 0//loop back
    moveSelector = true
}
else if (arrowLeftPressed) //This means right overwrites left
{
    selection = selection - 1
    if selection &lt; 0 then selection = selectMax//loop back
    moveSelector = true
} 


//Update the position of the selector
if moveSelector = true
{
    //x = objEasyModeButton.x - 64 + (objHardModeButton.x - objEasyModeButton.x) * selection;
    if selection = 0
    {
        x = objEasyModeButton.x - 64
        y = objEasyModeButton.y
    }
    else if selection = 1
    {
        x = objHardModeButton.x - 64
        y = objHardModeButton.y
    }
    else if selection = 2
    {
        x = objDangerModeButton.x - 64
        y = objDangerModeButton.y
    }
    else
    {
        x = objHighScoreButton.x - 64
        y = objHighScoreButton.y 
    }
    moveSelector = false
}


//button selection effects

if(enterPressed) //maybe a list with the room numbers would be better
{
    if selection = 0
    {
        global.easyMode = 1;
        scpStartSetup()
        room_goto(1);//Someone knows how to pick the index of a room?
    }
    else if selection = 1
    {
        global.easyMode = 0;
        scpStartSetup()
        room_goto(1);
    }
    else if selection = 2
    {
        global.easyMode = 1;
        scpStartSetup()
        room_goto(2);
    }
    else if selection = 3
    {
        room_goto(4);
    }
}
</string>
